<!DOCTYPE html><html>  <head>    <meta charset="UTF-8">    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0">    <title><%= title %></title>    <link rel='stylesheet' href='/stylesheets/weui.css'/>    <link rel='stylesheet' href='/stylesheets/example.css'/>  </head>  <body>  <div class="page input js_show">    <div class="page__hd">      <h1 class="page__title">欢迎来到Wanews</h1>      <p class="page__desc">祝你玩得开心</p>    </div>    <div class="weui-cells__title">删除文章</div>    <div class="weui-cells weui-cells_form">      <div class="weui-cell">        <div class="weui-cell__hd">          <label class="weui-label">序号</label>        </div>        <div class="weui-cell__bd">          <input class="weui-input" id="id" type="" pattern="[0-9]*" placeholder="请输入id">        </div>      </div>      <div class="weui-cell">        <div class="weui-cell__hd">          <label class="weui-label">标题</label>        </div>        <div class="weui-cell__bd">          <input class="weui-input" id="title" type="">        </div>      </div>      <div class="weui-cell">        <div class="weui-cell__hd">          <label class="weui-label">详情</label>        </div>        <div class="weui-cell__bd">          <input class="weui-input" id="des" type="">        </div>      </div>    </div>    <div class="weui-btn-area">      <a href="javascript:;" class="weui-btn weui-btn_primary" id="query0">查询</a>    </div>    <div class="weui-btn-area">      <a href="javascript:;" class="weui-btn weui-btn_primary" id="delete0">删除</a>    </div>  </div>    <script src="/javascripts/zepto.min.js"></script>    <script>      $("#query0").click(function(){        var id=$("#id").val();        var data={"uid":id};        $.ajax({          url:'/',          type:'post',          data:data,          success:function(data,status){            //alert(data);            var obj = data;            //alert(1);            if(obj.type=="1"){              //alert(1);              $("#title").val(obj.title);              $("#des").val(obj.des);            }else{              alert('序号输入错误');            }          },          error:function(data,status){          }        })      });      $("#delete0").click(function(){        var id=$("#id").val();        var data={"uid":id};        $.ajax({          url:'/update',          type:'post',          data:data,          success:function(data,status){            //alert(data);            var obj = data;            //alert(1);            if(obj.type=="1"){              //alert(1);              alert('删除成功');              $("#id").val('');              $("#title").val('');              $("#des").val('');            }else{              alert('序号输入错误');            }          },          error:function(data,status){          }        })      });    </script>  </body></html>